  <!--
 Convert TEI documents into odt files.
 -->
  <import file="../common/teianttasks.xml"/>

  <target name="dist" depends="setup,odd,notodd,oddcleanup"/>

  <target name="odd" if="processODD">
   <odd2lite in="${inputFile}" out="${inputFile}.processedodd"/>
   <buildodt in="${inputFile}.processedodd" out="${outputFile}" xsl="${profiledir}/${profile}/odt/to.xsl"/>
  </target>

  <target name="notodd" unless="processODD">
    <echo message="Converting ${inputFile} into ${outputFile}"/>
    <buildodt in="${inputFile}" out="${outputFile}" xsl="${profiledir}/${profile}/odt/to.xsl"/>
  </target>

</project>
